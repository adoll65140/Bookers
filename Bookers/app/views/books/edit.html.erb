<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <div class ="edit">
    <%= f.submit 'Update Book' %>
  </div>
  <div class="edit">
    <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
  </div>
<% end %>