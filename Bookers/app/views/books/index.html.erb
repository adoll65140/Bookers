
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<h1 class="headline">Books</h1>
  <table class="index" >
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book), class: "link" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "link" %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, data: {confirm: "Are you sure?"}, class: "link" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
<div class="new">
<h2>New book</h2>
<div class="post">
  <%= form_with model:@book, local:true do |f| %>
  <% render 'layouts/error', model: f.object %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <p>
      <%= f.submit 'Create Book' %>
    </p>
  <% end %>
</div>
</div>
